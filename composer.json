{
    "name": "friendsofcat/novaunit",
    "description": "Unit testing suite for Laravel Nova, built to extend PHPUnit",
    "keywords": [
        "laravel",
        "nova",
        "novaunit"
    ],
    "homepage": "https://github.com/friendsofcat/novaunit",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Josh Gaber",
            "email": "joshgaber@gmail.com",
            "homepage": "https://joshgaber.ca",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "ext-mbstring": "*",
        "cakephp/chronos": ">=1.2.3",
        "illuminate/support": "^6.0|^7.0|^8.0",
        "laravel/nova": "^2.0|^3.0",
        "phpunit/phpunit": "^8.5|^9.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.2|^6.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "FriendsOfCat\\NovaUnit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FriendsOfCat\\NovaUnit\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "lint": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}
